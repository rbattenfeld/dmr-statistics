<dmrStatisticConfigurer deploymentName="test.war">
   <ejbStatistics beanName="TestBean" beanNameAbbr="T1" type="StatelessBean" keys="execution-time" methods="testMe"/>
   <ejbStatistics beanName="TestSingleton" beanNameAbbr="T2" type="SingletonBean" keys="execution-time" methods="callMe, callMeAgain"/>
   <platformStatistics type="memory" subType="heap-memory-usage" keys="init, used, committed, max"/>
   <platformStatistics type="memory" subType="non-heap-memory-usage" keys="init, used, committed, max"/>
   <platformStatistics type="operating-system" subType="" keys="available-processors, system-load-average"/>
</dmrStatisticConfigurer>